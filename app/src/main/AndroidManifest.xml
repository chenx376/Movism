<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.chenyongrui.movism">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:name=".MovismApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".mvp.activities.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".mvp.activities.MovieDetailActivity"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".mvp.activities.FullImageActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".mvp.activities.CrewListActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".mvp.activities.CastListActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".mvp.activities.ProfileActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".mvp.activities.SettingsActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".mvp.activities.LicenseActivity"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name=".mvp.activities.AboutActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>